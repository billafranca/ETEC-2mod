<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Nome"
        android:fontFamily="serif"
        android:textColor="#0000FB"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_nome"
        android:layout_width="381dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:hint="ex: pedrolas"
        android:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome" />

    <TextView
        android:id="@+id/txt_cpf"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:text="CPF"
        android:textColor="#0000FF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nome" />

    <EditText
        android:layout_width="380dp"
        android:layout_height="49dp"
        android:hint="ex: 123.456.789-00"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="194dp"></EditText>


    <TextView
        android:id="@+id/txt_dataNasc"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="148dp"
        android:text="Data de nascimento"
        android:fontFamily="serif"
        android:textColor="#1B1BCC"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nome">

    </TextView>

    <EditText
        android:layout_width="386dp"
        android:layout_height="43dp"
        android:hint="ex: 09/09/1999"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#1B1BCC"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/input_button"
        android:layout_width="215dp"
        android:layout_height="69dp"
        android:backgroundTint="#AB330E"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Cadastrar"
        android:textColorHint="#FFFFFF"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="610dp" />

    <Button
        android:id="@+id/voltar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Voltar"
        android:textColorHint="#1B1BCC"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="543dp" />




</androidx.constraintlayout.widget.ConstraintLayout>